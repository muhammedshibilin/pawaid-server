{
  "compilerOptions": {
    "rootDir": "./src", 
    "outDir": "./dist", 
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/express.d" 
    ]
  },
  "include": ["src/**/*", "src/types/express.d.ts", "src/app.ts"]
}
